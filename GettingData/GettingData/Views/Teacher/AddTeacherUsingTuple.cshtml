@using GettingData.Models
@model (List<Branch> branches,Teacher teacher,Student student)

@addTagHelper * ,Microsoft.AspNetCore.Mvc.TagHelpers


<h2 style="text-align: center">Tuple Kullanarak Ogretmen Ekleme Sayfasi</h2>


<form method="post" asp-action="AddTeacherUsingTuple" asp-controller="Teacher">
	<div>
		<label asp-for="teacher.firstName"> FirstName: </label>
		<input type="text" asp-for="teacher.firstName" />

	</div>
	<div>
		<label asp-for="teacher.lastName"> LastName: </label>
		<input type="text" asp-for="teacher.lastName" />

	</div>
	<div>
		<label asp-for="teacher.branchId"> Branch:  </label>
		<select asp-for="teacher.branchId" asp-items="@(new SelectList(@Model.branches,"Id","branchName"))">
		</select>
	</div>
	<div>
		<button type="submit">
			Ogretmen Ekle
		</button>
	</div>
</form>
