
@model List<Author>
<a asp-controller="Author" asp-action="Create" asp-area="Management" class="btn btn-primary" style="float:right">Yeni Yazar Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].FirstName</td>
                <td>@Model[i].LastName</td>
                <td>
                    <a class=" big-icon" asp-controller="Author" asp-action="Edit" asp-route-id="@Model[i].ID" asp-area="Management"> <i class="bi bi-pencil-square"></i> </a>
                </td>
                <td>
                    <a class=" big-icon2 margin-icon" asp-controller="Author" asp-action="Delete" asp-route-id="@Model[i].ID" asp-area="Management"> <i class="bi bi-trash3-fill"></i> </a>
                </td>
            </tr>
        }

  </tbody>
  </table>

