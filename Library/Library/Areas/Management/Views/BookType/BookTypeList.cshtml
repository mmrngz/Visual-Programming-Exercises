
@model List<BookType>
<a asp-controller="BookType" asp-action="Create" class="btn btn-primary" asp-area="Management" style="float:right">Yeni Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
           
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@Model[i].Name</td>
                <td>
                    <a class=" big-icon" asp-controller="BookType" asp-action="Edit" asp-route-id="@Model[i].ID" asp-area="Management"> <i class="bi bi-pencil-square"></i> </a>
                </td>
                <td>
                    <a class=" big-icon2 margin-icon" asp-controller="BookType" asp-action="Delete" asp-route-id="@Model[i].ID" asp-area="Management"> <i class="bi bi-trash3-fill"></i> </a>
                </td>

            </tr>
        }
       
    </tbody>
</table>