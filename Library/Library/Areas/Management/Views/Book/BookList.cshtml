
@model List<Book>
<a asp-controller="Book" asp-action="Create" asp-area="Management" class="btn btn-primary" style="float:right">Yeni Kitap Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">PageCount</th>
            <th scope="col">Author</th>
            <th scope="col">BookType</th>

            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].PageCount</td>
                <td>@(Model[i].Author.FirstName +" "+ Model[i].Author.LastName)</td>
                <td>@Model[i].BookType.Name</td>
                <td>
                    <a class=" big-icon" asp-controller="Book" asp-action="Edit" asp-route-id="@Model[i].ID" asp-area="Management"> <i class="bi bi-pencil-square"></i> </a>
                </td>
                <td>
                    <a class=" big-icon2 margin-icon" asp-controller="Book" asp-action="Delete" asp-route-id="@Model[i].ID" asp-area="Management"> <i class="bi bi-trash3-fill"></i> </a>
                </td>
            </tr>
        }

    </tbody>
</table>
